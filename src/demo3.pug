extends layout.pug

block content
    .container(style="padding:24px;")
        .col-lg-8.col-lg-offset-2
            a(href="/#demo")
                i.fa.fa-arrow-left Back
            h2 Golden SVG icons menu
            p(style="font-size:1em;")
                | This example features a 3D menu created out of SVG shapes to 3D icons using Blender.
                | It also demonstrates events risen from an object action, that can be captured and
                | custom javascript functions can be called when activating a menu option.
            div(role="tabpanel")
                ul.nav.nav-tabs(role="tablist")
                    li.active(role="presentation")
                        a(href="#result" aria-controls="result" role="tab" data-toggle="tab") Result
                    li(role="presentation")
                        a(href="#html" aria-controls="html" role="tab" data-toggle="tab") HTML
                    li(role="presentation")
                        a(href="#javascript" aria-controls="javascript" role="tab" data-toggle="tab") Javascript
            .tab-content
                .tab-pane.active(role="tabpanel" id="result")
                    div(id="demo1" style="width:700px;height:400px;background:url('/img/background3.png');")
                .tab-pane(role="tabpanel" id="html")
                    pre
                        .language-markup
                            Here there will be the markup
